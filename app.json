{
  "expo": {
    "name": "CarTrafficMania",
    "scheme": "CarTrafficMania",
    "platforms": ["ios", "android"],
    "slug": "CarTrafficMania",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*" 
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.CarTrafficMania.game",
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "CarTrafficMania"
            ]
          }
        ]
      }
    },
    "android": {
      "package": "com.CarTrafficMania.game",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "game.CarTrafficMania.com",
              "pathPrefix": "/records"
            },
            {
              "scheme": "CarTrafficMania"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "a7c68843-f9d5-448a-a562-dc852c710103"
      }
    }
  }
}
